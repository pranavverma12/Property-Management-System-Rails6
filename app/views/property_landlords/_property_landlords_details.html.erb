<tr>
  <th>Landlord First Name</th>
  
  <th>Landlord Last Name</th>
  
  <th>Landlord Email</th>

  <th>Action</th>
</tr>

<% landlords.each do |landlord|%>
  <tr>
    <td>
      <%= link_to landlord.first_name, landlord, {:style=>'color: black; text-decoration: none'} %>
    </td>
    
    <td><%= landlord.last_name %></td>
    
    <td><%= landlord.email %></td>

    <td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, remove_owner_property_landlord_path(landlord_id: landlord.id, id: @property.id), method: :get, data: { confirm: "Are you sure want to remove #{landlord.full_name} from this property?" }, title: "Delete Owner" %></td>
  </tr>
<% end %>
